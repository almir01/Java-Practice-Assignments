  public static void main(String[] args) {
  
        int number = 234;
        int sum = 0;

        while( number > 0) {
           
           int reminder = number % 10;        // extract last digit 4
            sum += reminder;                  //  add last digit do variable sum
            number /= 10;                     //  divide by 10 to remove last digit
        }
        System.out.println(sum);              // print sum of numbers
  
  
  }
